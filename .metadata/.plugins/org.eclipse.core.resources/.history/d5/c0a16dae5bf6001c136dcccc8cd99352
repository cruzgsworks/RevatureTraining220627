package com.revature;

public class Launcher {

	private String helloWorldText = "";

	// Constructor
	public Launcher() {
		// Initialize hello world text once the object is created
		helloWorldText = "Hello World! Hello Java! I'm excited to learn.";
	}
	
	// Method to print Hello World in the console
	public void printHelloWorld(String arg1) {
		System.out.println(arg1);
	}

	// Main method
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Launcher helloWorldObj = new Launcher();
		helloWorldObj.printHelloWorld(helloWorldObj.helloWorldText);
	}
	
}
